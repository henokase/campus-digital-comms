{
  "name": "cdcp-backend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:integration": "node --test tests/integration/**/*.test.js",
    "prisma:generate": "npm -ws --if-present run prisma:generate",
    "prisma:migrate": "npm -ws --if-present run prisma:migrate"
  }
}
