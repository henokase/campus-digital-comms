    {
      "name": "Auth - Login Student (saves student token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/login",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student_postman_{{ts}}@example.com\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.collectionVariables.set('studentToken', json.token);"
            ]
          }
        }
      ],
      "response": []
    },
    {
