  "item": [
    {
      "name": "Auth - Register Faculty (success)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/register",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"faculty_postman_{{ts}}@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"faculty\",\n  \"fullName\": \"Faculty Postman\",\n  \"department\": \"Software\",\n  \"year\": 0\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Timestamp to avoid collisions",
              "pm.collectionVariables.set('ts', Date.now());"
            ]
          }
        }
      ],
      "response": []
    },
