        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.collectionVariables.set('ts', Date.now());",
              "pm.collectionVariables.set('studentEmail', `student_${pm.collectionVariables.get('ts')}@example.com`);",
              "pm.collectionVariables.set('facultyEmail', `faculty_${pm.collectionVariables.get('ts')}@example.com`);"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{gatewayBaseUrl}}/health",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },

