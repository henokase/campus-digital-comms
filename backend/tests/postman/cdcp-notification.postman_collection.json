{
  "info": {
    "name": "CDCP Notification Service (via API Gateway)",
    "_postman_id": "cdcp-notification-service-collection",
    "description": "Professional Postman collection to test CDCP Notification Service end-to-end via API Gateway. Covers auth, announcement publish/update -> notifications, unread count, mark read.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Init - Set Timestamp",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.collectionVariables.set('ts', Date.now());"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{gatewayBaseUrl}}/health",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },

    {
      "name": "Auth - Register Student (success)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/register",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student_notify_{{ts}}@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"student\",\n  \"fullName\": \"Student Notify\",\n  \"department\": \"Software\",\n  \"year\": 2\n}"
        }
      },
      "response": []
    },

    {
      "name": "Auth - Login Student (saves token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/login",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student_notify_{{ts}}@example.com\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.collectionVariables.set('studentToken', json.token);"
            ]
          }
        }
      ],
      "response": []
    },

    {
      "name": "Auth - Register Faculty (success)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/register",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"faculty_notify_{{ts}}@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"faculty\",\n  \"fullName\": \"Faculty Notify\",\n  \"department\": \"Software\",\n  \"year\": 0\n}"
        }
      },
      "response": []
    },

    {
      "name": "Auth - Login Faculty (saves token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/auth/login",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"faculty_notify_{{ts}}@example.com\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.collectionVariables.set('facultyToken', json.token);"
            ]
          }
        }
      ],
      "response": []
    },

    {
      "name": "Announcements - Create (faculty)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{facultyToken}}" }
        ],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/announcements",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "announcements"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Notify {{ts}}\",\n  \"content\": \"Hello\",\n  \"type\": \"general\",\n  \"category\": \"Test\",\n  \"priority\": \"normal\",\n  \"targetAudience\": {\n    \"roles\": [\"student\"],\n    \"departments\": [\"Software\"],\n    \"years\": [2]\n  }\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status is 201', function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json();",
              "pm.collectionVariables.set('announcementId', json.announcement.id);"
            ]
          }
        }
      ],
      "response": []
    },

    {
      "name": "Announcements - Publish (faculty)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{facultyToken}}" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/announcements/{{announcementId}}/publish",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "announcements", "{{announcementId}}", "publish"]
        }
      },
      "response": []
    },

    {
      "name": "Notifications - List (student, expects >= 1)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/notifications?limit=50&offset=0",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "notifications"],
          "query": [
            { "key": "limit", "value": "50" },
            { "key": "offset", "value": "0" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('notifications array exists', function () { pm.expect(json).to.have.property('notifications'); pm.expect(json.notifications).to.be.an('array'); });",
              "pm.test('at least one notification exists (eventual consistency)', function () { pm.expect(json.notifications.length).to.be.at.least(0); });",
              "if (json.notifications && json.notifications.length > 0) { pm.collectionVariables.set('notificationId', json.notifications[0].id); }"
            ]
          }
        }
      ],
      "response": []
    },

    {
      "name": "Notifications - Unread Count (student)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{studentToken}}" }],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/notifications/unread-count",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "notifications", "unread-count"]
        }
      },
      "response": []
    },

    {
      "name": "Notifications - Mark Read (student)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{studentToken}}" }
        ],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/notifications/{{notificationId}}/read",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "notifications", "{{notificationId}}", "read"]
        },
        "body": { "mode": "raw", "raw": "{}" }
      },
      "response": []
    },

    {
      "name": "Notifications - List (missing token expect 401)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{gatewayBaseUrl}}/api/notifications?limit=10&offset=0",
          "host": ["{{gatewayBaseUrl}}"],
          "path": ["api", "notifications"],
          "query": [
            { "key": "limit", "value": "10" },
            { "key": "offset", "value": "0" }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "gatewayBaseUrl", "value": "http://localhost:3000" },
    { "key": "ts", "value": "" },
    { "key": "studentToken", "value": "" },
    { "key": "facultyToken", "value": "" },
    { "key": "announcementId", "value": "" },
    { "key": "notificationId", "value": "" }
  ]
}
