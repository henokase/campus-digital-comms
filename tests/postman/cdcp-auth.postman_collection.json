{
  "info": {
    "name": "CDCP Auth Service",
    "_postman_id": "cdcp-auth-service-collection",
    "description": "Postman collection to test CDCP Auth Service: register, login, profile.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register (success)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student1@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"student\",\n  \"fullName\": \"Student One\",\n  \"department\": \"Software\",\n  \"year\": 3\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Register (email exists, expect 409)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student1@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"student\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login (success)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Expect 200 and token in body",
              "pm.test(\"status is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test(\"token exists\", function () {",
              "  pm.expect(json).to.have.property('token');",
              "});",
              "",
              "// Save token to collection variable",
              "pm.collectionVariables.set('authToken', json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student1@example.com\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login (wrong password, expect 401)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student1@example.com\",\n  \"password\": \"WrongPassword!\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Profile (with token, success)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "profile"]
        }
      },
      "response": []
    },
    {
      "name": "Auth - Profile (missing token, expect 401)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "auth", "profile"]
        }
      },
      "response": []
    }
  ],
  "variable": []
}